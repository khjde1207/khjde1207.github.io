[
    {
      "name": "Chinese (Hanja) filter",
      "expr": true,
      "filter": "[一-鿕]|[㐀-䶵]|[豈-龎]",
      "to": "",
      "enable": false
    },
    {
      "name": "Japanese (Japanese) filter",
      "expr": true,
      "filter": "[ぁ-ゔ]|[ァ-ヴー]|[々〆〤]",
      "to": "",
      "enable": false
    },
    {
      "name": "filter multiple question marks",
      "expr": true,
      "filter": "\\?{1,}",
      "to": "?",
      "enable": false
    },
    {
      "name": "Filter multiple exclamation marks",
      "expr": true,
      "filter": "\\!{1,}",
      "to": "!",
      "enable": false
    },
    {
      "name": "filter ----",
      "expr": true,
      "filter": "-{2,}",
      "to": "",
      "enable": false
    },
    {
      "name": "filter ===",
      "expr": true,
      "filter": "={2,}",
      "to": "",
      "enable": false
    },
    {
      "name": "filter .....",
      "expr": true,
      "filter": "\\.{2,}|\\…{1,}",
      "to": "",
      "enable": false
    },
    {
      "name": "filter ?!",
      "expr": true,
      "filter": "\\?{1,}!{1,}",
      "to": "!",
      "enable": false
    },
    {
      "name": "filter !?",
      "expr": true,
      "filter": "!{1,}\\?{1,}",
      "to": "!",
      "enable": false
    },
    {
      "name": "filter ?,!",
      "expr": true,
      "filter":
          "\"!\"|\"\\.\"|\"\\?\"|'!'|'\\?'|“\\.”|“!”|“\\?”|‘!’|‘\\?|\\[!\\]|\\[\\?\\]|\\[\\.\\]",
      "to": "",
      "enable": false
    },
    {
      "name": "apostrophe filter",
      "expr": false,
      "filter": "'",
      "to": "",
      "enable": false
    },
    {
      "name": "special character repeat filter",
      "expr": true,
      "filter":
          "\\&{2,}|\\#{2,}|\\@{2,}|\\${2,}|~{2,}|\\*{2,}|\\[\\]|\\(\\)|\\{\\}",
      "to": "",
      "enable": true
    },
    {
      "name": "http...",
      "expr": true,
      "filter": "h.{0,3}t.{0,3}t.{0,3}p.+",
      "to": "",
      "enable": true
    },
    {
        "name": "~", 
        "expr": true, 
        "filter": "~{1,}", 
        "to": "", 
        "enable": true
    }
]